<?xml version="1.0" encoding="utf-8"?>
<com.loopeer.shadow.ShadowView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cornerRadiusBR="8dp"
    app:foregroundColor="@color/colorAccent"
    app:shadowColor="@color/colorPrimary"
    app:shadowMarginBottom="8dp"
    app:shadowMarginLeft="1dp"
    app:shadowMarginRight="8dp"
    app:shadowMarginTop="1dp"
    app:shadowRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_item_icon"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_recipe"/>

        <TextView
            android:id="@+id/recipe_item_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/recipe_item_icon"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Recipe Card"/>

    </RelativeLayout>
</com.loopeer.shadow.ShadowView>